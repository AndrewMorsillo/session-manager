doctype 5
html(lang="en")
	head
		meta(charset="utf-8")
		title Session Manager
		link(rel="stylesheet", href="styles/popup.css")
	body
		div.row
			div.span4.btn-toolbar#toolbar
				div.btn-group
					button.btn.dropdown-toggle(data-toggle="dropdown")
						i.icon-folder-open
						| 
						span.caret
					ul.dropdown-menu
						li: a Open in current window
						li: a Replace current window
						li: a Open in new window
						li: a Open in new incognito window
				
				div.btn-group
					button.btn: i.icon-download-alt
					button.btn: i.icon-edit
					button.btn: i.icon-trash
				
				div.btn-group
					button.btn.dropdown-toggle(data-toggle="dropdown")
						i.icon-cog
						| 
						span.caret
					ul.dropdown-menu.pull-right
						li: a Options
						li: a Help
						li: a About
		
		div.row
			div.span4
				ul.unstyled#list
					li(data-tabcount="7"): a Start
					li(data-tabcount="8"): a Scalable TD
					li(data-tabcount="14"): a Article
					li(data-tabcount="5"): a scalabletd2
					li(data-tabcount="1"): a fooo
					li(data-tabcount="7"): a heroku
		
		div.row
			div.span4.box
				input.flex#save-name(type="text", placeholder="Session name")
				
				div.btn-group.dropup
					button.btn Save
					button.btn Temp
		
		script(src="scripts/jquery.js")
		script(src="scripts/bootstrap.js")